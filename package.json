{
  "name": "roon-random-app",
  "version": "1.6.5",
  "productName": "Roon Random Album",
  "description": "Mac desktop app for playing random Roon albums with intelligent filtering and genre selection",
  "main": "main.js",
  "type": "module",
  "author": {
    "name": "Mark McClusky",
    "email": "mark@mcclusky.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/markmcclusky/roon-random-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/markmcclusky/roon-random-app.git"
  },
  "keywords": [
    "roon",
    "music",
    "random",
    "album",
    "electron",
    "mac",
    "audio",
    "streaming"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "dist": "npm run make",
    "lint": "eslint . --ext js,jsx",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "electron-store": "^9.0.0",
    "node-roon-api": "github:RoonLabs/node-roon-api",
    "node-roon-api-browse": "github:RoonLabs/node-roon-api-browse",
    "node-roon-api-image": "github:RoonLabs/node-roon-api-image",
    "node-roon-api-transport": "github:RoonLabs/node-roon-api-transport",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@eslint/js": "^9.34.0",
    "@vitest/ui": "^4.0.7",
    "electron": "^30.5.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "png2icons": "^2.0.1",
    "prettier": "^3.6.2",
    "vitest": "^4.0.7"
  }
}
